
@{
    ViewBag.Title = "ItemAdmin";
}

<h2>Item Administration Page</h2>

<table class="table">

    <tr>
        <th>Item Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>

    @foreach (var i in ViewBag.ItemList)
    {
        <tr>
            <td>@i.Name</td>
            <td>@i.Description</td>
            <td>@i.Quantity</td>
            <td>@i.Price</td>
            <td><a href="/Home/ShowItemDetails?Name=@i.Name">Edit</a></td>
            <td><a href="/Home/DeleteItem?Name=@i.Name" onclick="return confirm('Are you sure you want to delete this item?')" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-trash"></span>
                Delete</a>
            </td>
        </tr>
    }
</table>

<a href="/Home/ItemForm" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-plus"></span> Click Here to Add a New Item
</a>

